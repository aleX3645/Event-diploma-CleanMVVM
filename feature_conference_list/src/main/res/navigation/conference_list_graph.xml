<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/recyclerFragment">

    <fragment
        android:id="@+id/recyclerFragment"
        android:name="com.alex3645.feature_conference_list.presentation.conferenceRecyclerView.ConferenceRecyclerFragment"
        android:label="ConferenceListFragment"
        app:moduleName="feature_conference_list">
        <action
            android:id="@+id/actionConferenceListToConferenceDetail"
            app:destination="@id/conferenceDetailFragment"/>
        <action
            android:id="@+id/actionRecyclerToSearch"
            app:destination="@id/searchFragment"/>
        <action
            android:id="@+id/actionRecyclerToAuth"
            app:destination="@id/authFeatureGraph"/>
        <action
            android:id="@+id/actionRecyclerToConferenceBuilderFeature"
            app:destination="@id/conferenceBuilderFeatureGraph"/>
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.alex3645.feature_conference_list.presentation.searchView.SearchFragment"
        android:label="searchFragment"
        app:moduleName="feature_conference_list">
    </fragment>

    <fragment
        android:id="@+id/conferenceDetailFragment"
        android:name="com.alex3645.feature_conference_list.presentation.conferenceDetail.ConferenceDetailFragment"
        android:label="ConferenceDetailFragment"
        app:moduleName="feature_conference_list">
        <action
            android:id="@+id/actionConferenceToEventList"
            app:destination="@id/eventListFragment"/>
        <argument
            android:name="conference"
            app:argType="com.alex3645.feature_conference_list.domain.model.Conference" />
    </fragment>

    <include-dynamic
        android:id="@+id/authFeatureGraph"
        app:moduleName="feature_auth"
        app:graphResName="auth_graph"/>

    <include-dynamic
        android:id="@+id/conferenceBuilderFeatureGraph"
        app:moduleName="feature_conference_builder"
        app:graphResName="conference_builder_graph"/>

    <fragment
        android:id="@+id/eventListFragment"
        android:name="com.alex3645.feature_conference_list.presentation.eventRecyclerView.EventRecyclerFragment"
        android:label="EventListFragment"
        app:moduleName="feature_conference_list">
        <action
            android:id="@+id/actionEventListToEvent"
            app:destination="@id/eventFragment"/>
        <argument
            android:name="conference"
            app:argType="com.alex3645.feature_conference_list.domain.model.Conference" />
    </fragment>

    <fragment
        android:id="@+id/eventFragment"
        android:name="com.alex3645.feature_conference_list.presentation.eventDetailView.EventDetailFragment"
        android:label="EventFragment"
        app:moduleName="feature_conference_list">
        <argument
            android:name="event"
            app:argType="com.alex3645.feature_conference_list.domain.model.Event" />
    </fragment>

</navigation>