<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eventRecyclerItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/startTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/no_data"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textAppearance="?attr/textAppearanceBody1"
        />

    <TextView
        android:id="@+id/endTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/no_data"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textAppearance="?attr/textAppearanceBody1"
        />

    <View
        android:id="@+id/separateLine"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/startTime"
        app:layout_constraintBottom_toBottomOf="@id/endTime"
        app:layout_constraintLeft_toRightOf="@id/startTime"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="16dp"
        android:background="@color/teal_700" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/separateLine"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/simple_nameTextBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_data"
            android:textAppearance="?attr/textAppearanceHeadline6"
            />

        <TextView
            android:id="@+id/simple_shortInfoTextBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_data"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?android:attr/textColorSecondary"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>